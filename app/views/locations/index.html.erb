<h1 class="h1">Locations</h1>

<div class="relative overflow-x-auto shadow rounded-md">
  <table class="w-full pb-4 text-sm text-left table-auto text-zinc-500">
    <thead class="text-xs uppercase text-zinc-700 bg-gray-50">
      <tr class="">
        <th scope="col" class="px-6 py-3">Name</th>
        <th scope="col" class="px-6 py-3">Address</th>
        <th scope="col" class="px-6 py-3">City</th>
        <th scope="col" class="px-6 py-3">Country</th>
        <th scope="col" class="px-6 py-3">
          <span class="sr-only">Edit</span>
        </th>
        <th scope="col" class="px-6 py-3">
          <span class="sr-only">Delete</span>
        </th>
      </tr>
    </thead>
    <tbody>
      <%= render @locations %>
    </tbody>
  </table>
</div>
<div class="flex justify-end mt-2">
  <%= button_to new_inventory_location_path, method: :get do %>
    <div class="flex items-center justify-center px-4 py-4 text-white bg-black rounded-full flex-center align-center hover:black-100">
      <span class="material-icons">add</span>
    </div>
  <% end %>
</div>
